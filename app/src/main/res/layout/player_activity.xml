<?xml version="1.0" encoding="utf-8"?>
<!-- Главный контейнер - ConstraintLayout для гибкого позиционирования элементов -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_medium"
        android:background="@color/background_settings_color">

        <!-- Панель инструментов с кнопкой назад // android:layout_height="?attr/actionBarSize" -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/BorderValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <!-- Обложка альбома (квадратное изображение) -->
        <ImageView
            android:id="@+id/albumArt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/padding_big"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="@dimen/padding_big"
            android:contentDescription="@string/album_art_description"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            tools:src="@drawable/placeholder_album"
            android:background="@drawable/rounded_corners"
            android:clipToOutline="true"
            android:outlineProvider="background"/>

        <!-- Название трека -->
        <TextView
            android:id="@+id/trackName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_big"
            android:layout_marginTop="@dimen/padding_big"
            android:layout_marginEnd="@dimen/padding_big"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/albumArt"
            style="@style/ToolbarStyle"
            tools:text="Yesterday (Remastered 2009)" />

        <!-- Имя исполнителя (под названием трека) -->
        <TextView
            android:id="@+id/artistName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_big"
            android:layout_marginTop="@dimen/padding_micro"
            android:layout_marginEnd="@dimen/padding_big"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/trackName"
            style="@style/ToolbarStyle"
            android:textSize="@dimen/text_medium"
            tools:text="The Beatles" />

        <!-- Кнопка воспроизведения -->
        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="@dimen/icon_play_size"
            android:layout_height="@dimen/icon_play_size"
            android:layout_marginTop="32dp"
            android:background="@drawable/play_field_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/artistName"
            app:srcCompat="@drawable/ic_play_100" />

        <!-- Текущее время трека (которое под кнопкой воспроизведения) -->
        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_micro"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playButton"
            style="@style/ToolbarStyle"
            android:textSize="@dimen/text_medium"
            tools:text="0:01" />

        <!-- Кнопка "Добавить в плейлист" -->
        <ImageButton
            android:id="@+id/playlistButton"
            android:layout_width="@dimen/icon_player_size"
            android:layout_height="@dimen/icon_player_size"
            android:layout_marginStart="@dimen/padding_big"
            android:background="@drawable/play_field_background"
            app:layout_constraintBottom_toBottomOf="@id/playButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/playButton"
            app:srcCompat="@drawable/ic_queue" />

        <!-- Кнопка "Добавить в избранное" -->
        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="@dimen/icon_player_size"
            android:layout_height="@dimen/icon_player_size"
            android:layout_marginEnd="@dimen/padding_big"
            android:background="@drawable/play_field_background"
            app:layout_constraintBottom_toBottomOf="@id/playButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/playButton"
            app:srcCompat="@drawable/ic_favorite_border" />

        <!-- Блок информации -->
        <TextView
            android:id="@+id/durationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="30dp"
            android:text="@string/duration_label"
            style="@style/PlayInfoStyle"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/currentTime" />

        <TextView
            android:id="@+id/durationValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_medium"
            style="@style/PlayInfoStyle"
            android:gravity="end"
            app:layout_constraintStart_toStartOf="@id/BorderValue"
            app:layout_constraintBaseline_toBaselineOf="@id/durationLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="00:01" />

        <TextView
            android:id="@+id/albumLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/album_label"
            style="@style/PlayInfoStyle"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/durationLabel" />

        <TextView
            android:id="@+id/albumValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_medium"
            style="@style/PlayInfoStyle"
            android:gravity="end"
            app:layout_constraintStart_toStartOf="@id/BorderValue"
            app:layout_constraintBaseline_toBaselineOf="@id/albumLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Help!" />

        <TextView
            android:id="@+id/yearLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/year_label"
            style="@style/PlayInfoStyle"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/albumLabel" />

        <TextView
            android:id="@+id/yearValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_medium"
            style="@style/PlayInfoStyle"
            android:gravity="end"
            app:layout_constraintStart_toStartOf="@id/BorderValue"
            app:layout_constraintBaseline_toBaselineOf="@id/yearLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="1965" />

        <TextView
            android:id="@+id/genreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/genre_label"
            style="@style/PlayInfoStyle"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/yearLabel" />

        <TextView
            android:id="@+id/genreValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_medium"
            style="@style/PlayInfoStyle"
            android:gravity="end"
            app:layout_constraintStart_toStartOf="@id/BorderValue"
            app:layout_constraintBaseline_toBaselineOf="@id/genreLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Rock" />

        <TextView
            android:id="@+id/countryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="@string/country_label"
            style="@style/PlayInfoStyle"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/genreLabel" />

        <TextView
            android:id="@+id/countryValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_medium"
            style="@style/PlayInfoStyle"
            android:gravity="end"
            app:layout_constraintStart_toStartOf="@id/BorderValue"
            app:layout_constraintBaseline_toBaselineOf="@id/countryLabel"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="UnitegdomUnited Kinited KingdomUnitegdomUnited Kinited KingdomUnitegdomUnited Kinited Kingdom" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>