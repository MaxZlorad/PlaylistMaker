<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_settings_color"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/search_toolbar"
        style="@style/ToolbarStyle"
        app:title="@string/search_text" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingHorizontal="@dimen/padding_horizontal" >

        <EditText
            android:id="@+id/search_input"
            style="@style/SearchElementStyle"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/search_field_background"
            android:drawableStart="@drawable/ic_search_small"
            android:drawablePadding="4dp"
            android:drawableTint="@color/search_field_element"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search_text"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:letterSpacing="0"
            android:maxLines="1"
            android:paddingStart="@dimen/padding_small"
            android:singleLine="true"
            android:textColorHint="@color/search_field_element"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="@dimen/text_medium"
            tools:ignore="Autofill" />

        <ImageButton
            android:id="@+id/clear_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/clear_search"
            android:src="@drawable/ic_clear"
            android:visibility="invisible" />

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tracks_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_input"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_track"/>

</LinearLayout>
